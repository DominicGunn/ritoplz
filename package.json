{
  "name": "Ritoplz",
  "description": "Worldwide Rankings for League of Legends. See who's the best player of your region.",
  "version": "2.0.0",
  "repository": {
    "url": "https://github.com/BuKinoshita/ritoplz.git",
    "type": "git"
  },
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "precommit": "lint-staged",
    "test": "npm run lint",
    "lint": "node_modules/.bin/xo"
  },
  "dependencies": {
    "axios": "^0.15.2",
    "next": "^2.2.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "^1.7.0",
    "eslint-plugin-react": "^6.10.3",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.1",
    "prettier": "^1.2.2",
    "redux-logger": "^3.0.1",
    "xo": "^0.18.1"
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "space": true,
    "semicolon": false,
    "esnext": true,
    "rules": {
      "space-before-function-paren": 0,
      "object-curly-spacing": 0,
      "react/prop-types": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "engines": {
    "node": "7.8.0"
  }
}
